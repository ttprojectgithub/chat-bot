{
  "name": "bot",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "bot/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/bot",
        "main": "bot/src/index.ts",
        "tsConfig": "bot/tsconfig.lib.json",
        "assets": ["bot/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "bot/jest.config.ts"
      }
    }
  }
}
